<% layout('layouts/boilerplate') %> 

    <div class="row">
        <h1 class="text-center">Add a Campground</h1>
        <div class="col-6 offset-3">
             <form action="/campgrounds"method="post" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
        <label class = "form-label" for="title">Title</label>
        <input class = "form-control" type="text" name="campground[title]" id="title" placeholder="title" required>
    <div class="valid-feedback">
        Looks good!
    </div>
    </div>
    <br>
    <div class="mb-3">
        <label class = "form-label" for="location">Location</label>
        <input class = "form-control" type="text" name="campground[location]" id="location" placeholder="location" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <br>
    <div class="input-group mb-3">
        <input type="file" class="form-control" id="images" name="image" multiple>
        <label class="input-group-text" for="images">Upload</label>
      </div>
   
    <div class="mb-3">
        
            <label for="description">Description</label>
            <textarea class="form-control" aria-label="With textarea" placeholder="Write anything about this place...." name="campground[description]" required></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
    
    </div>

    <div class="mb-3">
       <label for="price">Campground Price</label>
       <div class="input-group">
       <span class="input-group-text" id="price-label">$</span>
       <input type="text" class="form-control" aria-label="price-label" placeholder="0.00" name="campground[price]" required>
       <div class="valid-feedback">
        Looks good!
    </div>
    </div>
       
 
    
    </div>

    <div class="container">
        <div class="row mb-3 text-center">
            <div class="col-6">
    <button class="btn btn-success">Add Campground</button>
</div>
<div class="col-6">
    <a href="/campgrounds" class="btn btn-primary">All Campgrounds</a>
</div>
</div>
</div>

    </form>
  
        </div>
    </div>
  
    
